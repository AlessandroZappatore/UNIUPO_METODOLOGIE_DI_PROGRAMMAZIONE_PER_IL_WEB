<!DOCTYPE html>
<html lang="it">

<head>
  <title>WIW - What I Watched</title>
  <link rel="shortcut icon" href="/images/static/popcorn.png" />
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet" href="/stylesheets/mystyle1.css" />

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
    <script src="/javascripts/contentInteraction.js"></script>
    <script defer src="/javascripts/logout.js"></script>

</head>

<body>
    <%- include('navbar', {page: page}) %>
    <section class="hero-section">

        <!-- Inizio ultime uscite -->
    
        <section class="card-section">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-12 text-center">
                <h1 id="titoli-herosection">ULTIME USCITE</h1>
              </div>
              <% ultimeUscite.forEach((uscita) => { %>
                <div class="col-md-4">
                  <div class="card mx-auto">
                    <div class="card-content">
                      <img src="/images/poster/<%= uscita.poster  %>" alt="<%= uscita.titolo %>" />
                    </div>
                    <div class="second-content">
                      <div class="card-inner"></div>
                      <div class="text-container overflow-auto">
                        <h3><%= uscita.titolo %></h3>
                        <p>Regista: <%= uscita.registi %></p>
                        <p>Data di uscita: <%= uscita.data_uscita %></p>
                        <p>Genere: <%= uscita.genere %></p>
                        <p align="justify"><%= uscita.trama %></p>
                        <a href="/visualizza_contenuto/<%= uscita.titolo  %>" class="btn btn-primary btn-altro">Altro</a>
                      </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>
        </section>
        <!-- Fine ultime uscite -->
        
        <!-- Inizio Top 3 -->
        <section class="card-section" id="card-section-top-3">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-12 text-center">
                <h1 id="titoli-herosection">TOP 3</h1>
              </div>
              <% top3.forEach((contenuto, index) => { %>
                <div class="col-md-4">
                  <div class="card mx-auto">
                    <div class="card-content position-relative">
                      <img src="/images/poster/<%= contenuto.poster %>" alt="<%= contenuto.titolo %>" />
                      <% if (index === 0) { %>
                        <img src="/images/static/first.png" class="position-absolute top-0 start-0 m-2 small-image" alt="First place" />
                      <% } else if (index === 1) { %>
                        <img src="/images/static/second.png" class="position-absolute top-0 start-0 m-2 small-image" alt="Second place" />
                      <% } else if (index === 2) { %>
                        <img src="/images/static/third.png" class="position-absolute top-0 start-0 m-2 small-image" alt="Third place" />
                      <% } %>
                    </div>                    
                    <div class="second-content">
                      <div class="card-inner"></div>
                      <div class="text-container overflow-auto">
                        <h3><%= contenuto.titolo %></h3>
                        <p>Regista: <%= contenuto.registi %></p>
                        <p>Anno: <%= contenuto.data_uscita %></p>
                        <p>Genere: <%= contenuto.genere %></p>
                        <p><%= contenuto.trama %></p>
                        <a href="/visualizza_contenuto/<%= contenuto.titolo %>" class="btn btn-primary btn-altro">Altro</a>
                      </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>
        </section>
        
        <!-- Fine Top 3 -->
    
      </section>
    <%- include('footer'); -%>