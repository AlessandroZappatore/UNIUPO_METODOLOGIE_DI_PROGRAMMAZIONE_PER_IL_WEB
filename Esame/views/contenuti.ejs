</head>

<body>
    <!-- home.ejs -->

<!-- home.ejs -->

<%- include('navbar') %>
<section class="hero-section">
  <section class="card-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 text-center">
          <h1 id="titoli-herosection"><%= title %></h1>
        </div>
        <div id="carouselFilm" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
              <% for (let i = 0; i < contents.length; i += 8) { %>
              <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                  <div class="row">
                      <% for (let j = i; j < i + 4 && j < contents.length; j++) { %>
                        <div class="col-md-3">
                          <div class="card mx-auto">
                            <div class="card-content">
                              <img src="/images/poster/<%= contents[j].poster %>" alt="<%= contents[j].titolo %>" />
                            </div>
                            <div class="second-content">
                              <div class="text-container overflow-auto">
                                <h3><%= contents[j].titolo %></h3>
                                <p>Regista: <%= contents[j].registi %></p>
                                <p>Uscita: <%= contents[j].data_uscita %></p>
                                <p>Genere: <%= contents[j].genere %></p>
                                <p align="justify"><%= contents[j].trama %></p>
                                <a href="/visualizza_contenuto/<%= contents[j].titolo %>" class="btn btn-primary btn-altro">Altro</a>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% } %>
                  </div>
                  <div class="row mt-3">
                      <% for (let j = i + 4; j < i + 8 && j < contents.length; j++) { %>
                        <div class="col-md-3">
                          <div class="card mx-auto">
                            <div class="card-content">
                              <img src="/images/poster/<%= contents[j].poster %>" alt="<%= contents[j].titolo %>" />
                            </div>
                            <div class="second-content">
                              <div class="text-container overflow-auto">
                                <h3><%= contents[j].titolo %></h3>
                                <p>Regista: <%= contents[j].registi %></p>
                                <p>Uscita: <%= contents[j].data_uscita %></p>
                                <p>Genere: <%= contents[j].genere %></p>
                                <p><%= contents[j].trama %></p>
                                <a href="/visualizza_contenuto/<%= contents[j].titolo %>" class="btn btn-primary btn-altro">Altro</a>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% } %>
                  </div>
              </div>
              <% } %>
          </div>
          <% if (contents.length > 8) { %>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselFilm" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselFilm" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
          </button>
          <% } %>
      </div>      
      </div>
    </div>
  </section>
  
</section>
<%- include('footer'); -%>

