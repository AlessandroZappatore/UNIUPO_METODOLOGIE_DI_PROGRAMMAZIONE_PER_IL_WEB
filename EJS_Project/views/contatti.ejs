<!DOCTYPE html>
<html lang="it">

<head>
  <title>WIW - Contattaci</title>
  <link rel="shortcut icon" href="/images/static/popcorn.png" />
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet" href="/stylesheets/mystyle2.css" />

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
    <script src="/javascripts/contentInteraction.js"></script>
    <script defer src="/javascripts/logout.js"></script>

</head>

<body>
    <%- include('navbar') %>
    <section class="hero-section-contatti">

        <!-- Inizio contenitore contatti -->
        <div class="container d-flex justify-content-center align-items-center min-vh-100">
          <div class="row border rounded-5 p-3 bg-white shadow box-area">
    
            <!-- Inizio contenitore sinistro -->
            <div class="col-md-5 rounded-4 d-flex justify-content-center align-items-center flex-column left-box">
              <p class="text-white fs-2 left-box-title">What I Watched</p>
              <div class="featured-image mb-3">
                <img src="/images/static/contact-us.svg" class="img-fluid left-box-img">
              </div>
              <small class="text-white text-wrap text-center left-box-subtitle">
                In caso di necessit√† non esitare a
                contattarci</small>
            </div>
            <!-- Fine contenitore sinistro -->
    
            <!-- Inizio contenitore destro -->
            <div class="col-md-7 right-box">
              <div class="row align-items-center">
    
                <div class="header-text mb-4 text-center">
                  <h2>Contattaci</h2>
                </div>
    
                <div class="input-group mb-3">
                  <span class="input-group-text">&nbsp;@ </span>
                  <div class="form-floating">
                    <input type="text" class="form-control" id="floatingInputGroup1" placeholder="Email">
                    <label for="floatingInputGroup1">La tua email</label>
                  </div>
                </div>
    
                <div class="form-floating">
                  <textarea class="form-control box-trama" placeholder="La tua richiesta qui" id="floatingTextarea2"
                    style="height: 100px"></textarea>
                  <label for="floatingTextarea2">&nbsp;&nbsp;&nbsp;La tua richiesta</label>
                </div>
    
                <div class="input-group mb-5 d-flex justify-content-between">
                  <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="formCheck" checked>
                    <label for="formCheck" class="form-check-label text-secondary"><small>Accetto l'informativa
                        privacy</small></label>
                  </div>
                </div>
    
                <div class="input-group mb-3">
                  <button class="btn btn-lg btn-primary w-100 fs-6" onclick="simulateSendEmail()">Invia</button>
                </div>
              </div>
            </div>
            <!-- Fine contenitore destro -->
    
          </div>
        </div>
        <!-- Fine contenitore contatti -->
      </section>

      <%- include('modal'); -%>
      <%- include('footer'); -%>