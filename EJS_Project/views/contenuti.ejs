<body>
    <!-- home.ejs -->

<!-- home.ejs -->

<%- include('navbar') %>
<section class="hero-section">
  <section class="card-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 text-center">
          <h1 id="titoli-herosection"><%= title %></h1>
        </div>
        <% contents.forEach(content => { %> <!-- Utilizza il metodo slice per ottenere solo i primi 8 film -->
          <div class="col-md-3">
            <div class="card mx-auto">
              <div class="card-content">
                <img src="/images/poster/<%= content.poster %>" alt="<%= content.titolo %>" />
              </div>
              <div class="second-content">
                <div class="text-container overflow-auto">
                  <h3><%= content.titolo %></h3>
                  <p>Regista: <%= content.registi %></p>
                  <p>Uscita: <%= content.data_uscita %></p>
                  <p>Genere: <%= content.genere %></p>
                  <p><%= content.trama %></p>
                  <a href="/visualizza_contenuto/<%= content.titolo %>" class="btn btn-primary btn-altro">Altro</a>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </section>
  
</section>
<%- include('footer'); -%>

